{
    "name": "Invert.io",
    "description": "Toggle between dark and light mode in one click.",
    "version": "1.0.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["popup.js"],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Invert.io",
        "default_popup": "popup.html"
    },
    "permissions": [
        "https://*/*", 
        "http://*/*",
        "tabs"
    ]
    
}